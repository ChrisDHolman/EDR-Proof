# Azure Storage Configuration
AZURE_STORAGE_ACCOUNT_URL=https://your-storage-account.blob.core.windows.net
AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key

# Azure Subscription & Authentication
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# Azure Resource Configuration
AZURE_RESOURCE_GROUP=edr-proof-rg
AZURE_LOCATION=eastus
AZURE_SUBNET_ID=/subscriptions/{subscription-id}/resourceGroups/{rg}/providers/Microsoft.Network/virtualNetworks/{vnet}/subnets/{subnet}

# VM Configuration
VM_SIZE=Standard_D2s_v3
VM_ADMIN_USERNAME=azureuser
VM_ADMIN_PASSWORD=YourSecurePassword123!
VM_POOL_SIZE=5

# VM Base Images (Create these from VMs with EDR agents pre-installed)
CROWDSTRIKE_IMAGE_ID=/subscriptions/{subscription-id}/resourceGroups/{rg}/providers/Microsoft.Compute/images/crowdstrike-base-image
SENTINELONE_IMAGE_ID=/subscriptions/{subscription-id}/resourceGroups/{rg}/providers/Microsoft.Compute/images/sentinelone-base-image
SOPHOS_IMAGE_ID=/subscriptions/{subscription-id}/resourceGroups/{rg}/providers/Microsoft.Compute/images/sophos-base-image

# CDR Engine Configuration
# Glasswall
GLASSWALL_API_URL=http://your-glasswall-server:8080
GLASSWALL_API_KEY=your-glasswall-api-key

# OPSWAT MetaDefender CDR
OPSWAT_CDR_API_URL=http://your-opswat-server:8008
OPSWAT_CDR_API_KEY=your-opswat-api-key

# Votiro
VOTIRO_API_URL=https://your-votiro-server/api
VOTIRO_API_KEY=your-votiro-api-key
VOTIRO_API_SECRET=your-votiro-api-secret

# AV Engine Configuration
# OPSWAT MetaDefender AV
OPSWAT_AV_API_URL=http://your-opswat-server:8008
OPSWAT_AV_API_KEY=your-opswat-api-key

# ReversingLabs
REVERSINGLABS_API_URL=https://data.reversinglabs.com/api
REVERSINGLABS_API_KEY=your-reversinglabs-api-key
REVERSINGLABS_API_USERNAME=your-reversinglabs-username

# EDR Console Configuration
# CrowdStrike Falcon
CROWDSTRIKE_CLIENT_ID=your-crowdstrike-client-id
CROWDSTRIKE_CLIENT_SECRET=your-crowdstrike-client-secret
CROWDSTRIKE_BASE_URL=https://api.crowdstrike.com

# SentinelOne
SENTINELONE_API_URL=https://your-instance.sentinelone.net
SENTINELONE_API_TOKEN=your-sentinelone-api-token

# Sophos
SOPHOS_API_URL=https://api.central.sophos.com
SOPHOS_CLIENT_ID=your-sophos-client-id
SOPHOS_CLIENT_SECRET=your-sophos-client-secret
SOPHOS_TENANT_ID=your-sophos-tenant-id

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Application Configuration
LOG_LEVEL=INFO
MAX_VM_USES=20
VM_CLEAN_TIMEOUT=120
FILE_INTERACTION_DURATION=300
